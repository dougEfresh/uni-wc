{
  "name": "@uni-wc/cli",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "main": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "typings": "dist/types/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && pnpm run build:esm+types",
    "build:esm+types": "tsc",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "pnpm run build && ava",
    "cli": "pnpm build && node ./dist/esm/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fireblocks/ts-sdk": "^2",
    "@inquirer/prompts": "^5.0.4",
    "@inquirer/select": "^2.3.4",
    "@uni-wc/chains": "workspace:*",
    "@uni-wc/provider": "workspace:*",
    "@walletconnect/keyvaluestorage": "^1.1.1",
    "@walletconnect/universal-provider": "^2.13.0",
    "bs58": "^5.0.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "qrcode-terminal": "^0.12.0",
    "unstorage": "^1.10.2",
    "viem": "^2.12.0",
    "xdg-basedir": "^5.1.0"
  },
  "devDependencies": {
    "@ava/typescript": "^5.0.0",
    "@types/node": "^20",
    "@types/qrcode-terminal": "^0.12.2",
    "ava": "^6.1.3",
    "eslint": "^8",
    "eslint-config-next": "14.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "ava": {
    "files": [
      "src/**/*.test.*"
    ],
    "verbose": false,
    "typescript": {
      "rewritePaths": {
        "src/": "dist/esm/"
      },
      "compile": false
    },
    "require": [
      "ts-node/esm/transpile-only"
    ],
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  }
}
