{
  "include": [
    "src/**/*.ts"
  ],
    "exclude": [
	"dist",
	"node_modules",
	"*.test.ts"
  ],
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "rootDir": "./src",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist/types",
    "baseUrl": "./",
    "outDir": "./dist/esm",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  }
}
