{
  "name": "@uni-wc/provider",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "main": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "typings": "dist/types/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && pnpm run build:esm+types",
    "build:esm+types": "tsc",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "pnpm run build && ava"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@walletconnect/universal-provider": "*",
    "viem": "*",
    "@uni-wc/chains": "workspace:*"
  },
  "devDependencies": {
    "@ava/typescript": "^5.0.0",
    "@types/node": "^20",
    "ava": "^6.1.3",
    "eslint": "^8",
    "eslint-config-next": "14.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "ava": {
    "files": [
      "src/**/*.test.*"
    ],
    "verbose": false,
    "typescript": {
      "rewritePaths": {
        "src/": "dist/esm/"
      },
      "compile": false
    },
    "require": [
      "ts-node/esm/transpile-only"
    ],
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  }
}
