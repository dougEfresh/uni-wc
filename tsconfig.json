{
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
   "dist",
   "node_modules",
   "*.test.ts"
  ],
    "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": true,
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  }
}
